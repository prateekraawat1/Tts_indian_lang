<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="match_parent" tools:context="com.example.tts_indian_lang.SlideActivity" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v4.view.ViewPager android:layout_height="match_parent" android:layout_width="match_parent" android:layout_weight="0.75" android:id="@+id/viewpager"> </android.support.v4.view.ViewPager>


    <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:background="@color/black">

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="0.20" android:id="@+id/backBtn" android:background="@null" android:textColor="#FFFFFF" android:text="BACK"/>

    <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="0.50" android:id="@+id/dots" android:gravity="center_horizontal"> </LinearLayout>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="0.20" android:id="@+id/nextBtn" android:background="@null" android:textColor="#FFFFFF" android:text="NEXT"/>

</LinearLayout>

</LinearLayout>